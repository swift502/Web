---
import Layout from "../../layouts/Default.astro";
import BigButton from "../../components/core/BigButton.astro";
import '../../styles/tiles.css';
import { getPageInfo } from "../../scripts/astro-helpers";

// Layout variables
const pageInfo = getPageInfo({
	titlePrepend: 'Sketchbook demo archive',
	description: 'Browse through the demo history of Sketchbook, the three.js 3D playground.'
});
---

<Layout pageInfo={pageInfo}>
	<div class="sketchbook-archive">
		<div class="title">
			<h1>Sketchbook demo archive</h1>
		</div>
		<div class="demo-list">
			<div class="tile-wrapper"><a href="/sketchbook/0.4/"><div class="tile">0.4</div></a></div>
			<div class="tile-wrapper"><a href="/sketchbook/0.3/"><div class="tile">0.3</div></a></div>
			<div class="tile-wrapper"><a href="/sketchbook/0.2/"><div class="tile">0.2</div></a></div>
			<div class="tile-wrapper"><a href="/sketchbook/0.1/"><div class="tile">0.1</div></a></div>
		</div>
	</div>
	<div class="bottom-wrapper" slot="anchor-bottom">
		<BigButton
			text="Return home"
			link="/"
			icon="/assets/svg/home.svg"
		/>
	</div>
</Layout>

<style>
	.sketchbook-archive {
		display: flex;
		flex-direction: column;
		justify-content: center;
		height: 100%;
	}

	.title {
		text-align: center;
	}

	.demo-list {
		text-align: center;
		width: 100%;
		max-width: 320px;
		margin: 0 auto;
	}

	.demo-list .tile-wrapper {
		width: 100%;
		margin: 16px auto;
	}

	.bottom-wrapper {
		text-align: center;
		margin: 10px 0px;
	}
</style>