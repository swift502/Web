---
import FrameView from "../components/project_detail/FrameView.astro";
import MediaControls from "../components/project_detail/MediaControls.astro";
import type { ContentBlockData, VideoProperties } from "../scripts/interfaces";

interface Props extends ContentBlockData<VideoProperties> {}
const { project, contentBlock } = Astro.props;

const videoPath = `/assets/projects/${project.name}/${contentBlock.properties.data}`;
const width = 'width' in contentBlock.properties ? contentBlock.properties.width : '16';
const height = 'height' in contentBlock.properties ? contentBlock.properties.height : '9';
---

<FrameView
	project={project}
	contentBlock={contentBlock}
	width={width}
	height={height}
>
	<video autoplay muted loop onloadeddata="fadeIn(this)">
		<source src={videoPath} type="video/webm"/>
	</video>
	<MediaControls
		name={contentBlock.properties.data}
		path={videoPath}
	/>
</FrameView>

<style>
	video {
		opacity: 0;
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
</style>