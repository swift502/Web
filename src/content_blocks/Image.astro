---
import MediaControls from '../components/content_block/MediaControls.astro';
import { imageSizeFromFile } from 'image-size/fromFile';
import AspectContainer from '../components/content_block/AspectContainer.astro';
import type { ContentBlockProps, ImageProperties } from '../scripts/build/interfaces';

interface Props extends ContentBlockProps<ImageProperties> {}
const { project, contentBlock } = Astro.props;

const imagePath = `/assets/projects/${project.name}/${contentBlock.properties.data}`
const size = await imageSizeFromFile('./public/' + imagePath);
const inset = contentBlock.properties.inset ? ' inset' : '';
---

<AspectContainer
	project={project}
	contentBlock={contentBlock}
	width={size.width}
	height={size.height}
>
	<img
		src={imagePath}
		class={"project-detail-image" + inset}
		onload="fadeIn(this);"
	/>
	<MediaControls
		name={contentBlock.properties.data}
		path={imagePath}
	/>
</AspectContainer>

<style>
	.project-detail-image {
		opacity: 0;
		width: 100%;
		height: 100%;
	}

	.project-detail-image.inset {
		box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.2);
	}
</style>